<h1>List of Tasks</h1>

<%= link_to "add a new task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
    <%= link_to "Edit task", edit_task_path(task)%>
    <%= button_to "Delete", task_path(task), method: :delete%>
    </li>
    <% end %>
</ul>
